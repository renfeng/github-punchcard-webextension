{
	"manifest_version": 2,
	"name": "Github Punchcard",
	"version": "1.3",
	"description": "Make Github Punchcard great again!",
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Github Punchcard",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true,
		"open_in_tab": true
	},
	"permissions": [
		"tabs",
		"storage",
		"https://api.github.com/*",
		"https://github.com/*"
	],
	"content_scripts": [
		{
			"js": [
				"content.js",
				"PunchCard.js"
			],
			"css": [
				"PunchCard.css"
			],
			"matches": [
				"https://github.com/*"
			],
			"run_at": "document_start"
		},
		{
			"js": [
				"intro.min.js"
			],
			"css": [
				"introjs.min.css"
			],
			"matches": [
				"https://github.com/settings/tokens/new"
			]
		}
	]
}
